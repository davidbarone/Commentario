{
  "name": "Commentario",
  "publisher": "Dbarone",
  "displayName": "Commentario",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "xmlCommentsPath": {
          "type": "string",
          "description": "Path to the C# xml comments file."
        },
        "assemblyPath": {
          "type": "string",
          "description": "Path to the assembly file."
        },
        "documentPath": {
          "type": "string",
          "description": "Path to the output documentation file."
        },
        "documentType": {
          "type": "string",
          "description": "The document type",
          "enum": [
            "markdown",
            "html",
            "pdf"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "commentario.helloWorld",
        "title": "Hello World"
      }
    ],
    "taskDefinitions": [
      {
        "type": "doDocument",
        "properties": {
          "xmlCommentsPath": {
            "type": "string",
            "description": "Path to the C# xml comments file."
          },
          "assemblyPath": {
            "type": "string",
            "description": "Path to the assembly file."
          },
          "documentPath": {
            "type": "string",
            "description": "Path to the output documentation file."
          },
          "documentType": {
            "type": "string",
            "description": "The document type",
            "enum": [
              "markdown",
              "html",
              "pdf"
            ]
          }
        }
      }
    ]
  },
  "commands": [
    {
      "title": "Create Documentation",
      "shortTitle": "Creates documentation from xml comments file.",
      "command": "commentario.createDocumentation"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
